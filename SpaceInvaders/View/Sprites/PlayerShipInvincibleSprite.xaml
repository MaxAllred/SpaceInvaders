<local:BaseSprite
    x:Class="SpaceInvaders.View.Sprites.PlayerShipInvincibleSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceInvaders.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="28"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PlayerShipInvincibleColor" Color="White"/>
    </UserControl.Resources>


    <Canvas>
        <local:PlayerShipSprite/>
        <Rectangle Width="60" Height="2" Canvas.Left="-5" Canvas.Top ="-5"  Fill="{StaticResource PlayerShipInvincibleColor}"/>
        <Rectangle Width="2" Height="43" Canvas.Left="-5" Canvas.Top="-5" Fill="{StaticResource PlayerShipInvincibleColor}"/>
        <Rectangle Width="2" Height="43" Canvas.Left="53" Canvas.Top="-5" Fill="{StaticResource PlayerShipInvincibleColor}"/>
        <Rectangle Width="60" Height="2" Canvas.Top="37" Canvas.Left="-5" Fill="{StaticResource PlayerShipInvincibleColor}"/>
    </Canvas>
</local:BaseSprite>